{
    "name": "hanwoolderink88/apiformbundle",
    "description": "Symfony bundle for rest api form validation",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "hanwoolderink",
            "email": "hanwoolderink@gmail.com"
        }
    ],
    "require": {
        "ext-json": "*",
        "php": "^7.4",
        "doctrine/orm": "^2.7",
        "symfony/framework-bundle": "5.1.*",
        "symfony/security-core": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Hanwoolderink\\ApiForm\\": ""
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.39"
    },
    "scripts": {
        "test": [
            "@stan",
            "@unit",
            "@sniff"
        ],
        "unit": "vendor/bin/phpunit Tests",
        "unit-coverage": "vendor/bin/phpunit --coverage-html Tests/html .",
        "sniff": "vendor/bin/phpcs --standard=ruleset.xml DependencyInjection ApiForm",
        "sniff-fix": "vendor/bin/phpcbf --standard=ruleset.xml DependencyInjection ApiForm",
        "stan": "vendor/bin/phpstan analyse --level 6 ApiForm DependencyInjection Tests"
    }
}